<!DOCTYPE html>
<html>
<head>
  <title>Project</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <%= html_import_tag 'application'%>
  <meta name="viewport" content="width=device-width, initial-scale=1" >
</head>

<body>

  <%- if identity_signed_in? %>
    <section id="r4lApp">
      <template is="dom-bind" id="app">

        <paper-drawer-panel>
          <div drawer id="menuContainer">
            <paper-toolbar>
              <div class="mainHeader">
                <a id="logo" href="/">
                  <img src="assets/other/logo.png" alt="R4Llogo">
                </a>
              </div>
            </paper-toolbar>
            <menu-component> </menu-component>
          </div>
          <div main class=pure-g"">
            <paper-toolbar>

              <main-header></main-header>

            </paper-toolbar>
              <div id="main-cards" class="pure-u-1 pure-u-lg-18-24">
                <counterdown-slider></counterdown-slider>
                <%= yield %>
              </div>
              <aside-bar class="pure-u-1 pure-u-lg-6-24"></aside-bar>
          </div>
        </paper-drawer-panel>

      </template>
    </section>
  <% else %>

    <header class="mainHeader">
      <a id="logo" href="/">
        <img src="assets/other/logo.png" alt="R4Llogo">
      </a>
    </header>

    <section id="landing">
      <article class="intro pure-g">
        <div class="pure-u-1 pure-u-md-1-2">
          <p>
            <%= t ('home.p1') %>
          </p>
          <p>
            <%= t ('home.p2') %>
          </p>
          <p>
            <%= t ('home.p3') %>
          </p>
          <p>
            <%= t ('home.p4') %>
          </p>
          <p>
            <%= t ('home.p5') %>
          </p>
          <p>
            <%= t ('home.p6') %>
          </p>
        </div>
        <div class="pure-u-1 pure-u-md-1-2">
          <landing-form  hideFooter="{{false}}" ></landing-form>
        </div>

      </article>
      <article class="info">
        <landing-categories></landing-categories>

        <landing-professionals></landing-professionals>
      </article>
      <article class="reSubmit pure-g">
        <div class="pure-u-1 pure-u-md-1-2"></div>
        <div class="pure-u-1 pure-u-md-1-2">
          <landing-form  hideFooter ></landing-form>

        </div>
      </article>
      <footer>
        <h2>Inscribte ya!</h2>
        <div class="pure-g">
          <div class="socialMedia pure-u-1 pure-u-md-1-3">
            <iron-image sizing="contain" src="assets/icons/facebook.png"></iron-image>
          </div>
          <div class="tel pure-u-1 pure-u-md-1-3">
            <p>55 · 44 · 92 · 09</p>
            <p>hola@run4life.com</p>
          </div>
          <div class="socialMedia pure-u-1 pure-u-md-1-3">
            <iron-image sizing="contain" src="assets/icons/twiiter.png"></iron-image>
          </div>
        </div>

      </footer>
    </section>
  <% end %>


</body>
</html>
