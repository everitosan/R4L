:host
  color white
  margin 1em 0
  paper-material
    background white
    display block
    margin 0 auto
    width 300px
    h3
      background #356B91
      font-size 2em
      text-transform uppercase
      text-align center
      margin 0
      padding 0.5em 0
    .price
      font-size 1.2em
      background #374449
      padding .3em
      span
        font-size .8em
    paper-input, gold-email-input
      --paper-input-container-focus-color #4C96CA
      --paper-input-container-color #4C96CA
    form
      paper-button
        border-radius 0
        width 80%
        background #E82675
        display block
        margin 0 auto
  .form-footer
    .text
      text-align right
      color #4C96CA
      paper-button
        text-transform lowercase
        color #E82675
  .input
    display block
    margin 0 auto
    width 80%
  #dialog
    min-width 350px
    min-height 250px
    h2
      font-family "Hero"
      text-align center
      background #356B91
      color white
      margin 0
    .buttons
      text-align center
      color white
      padding .9em
    paper-button
      border-radius 0
      width 50%
      background #E82675
