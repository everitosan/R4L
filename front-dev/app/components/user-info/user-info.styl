:host
  display block
  font-family "Hero"

  .name
    font-weight 100
    text-align center

  .profilePicContainer
    border 10px solid #F3F4F5
    border-radius  50%
    display block
    overflow hidden
    margin 0 auto
    height 200px
    width 200px

  .profilePic
    height 100%
    width 100%

  .personalData
    display flex

  .personalData div
    flex  1

  .personalData div h3,
  .personalData div p
    text-align center
    text-transform uppercase

  .personalData div h3
    font-family "Hero Light"
    font-weight 100
    text-decoration underline
    margin 0


  .personalData div p
    font-size 2em
    font-weight 100
    margin-top 0
    margin-bottom .5em

   .personalData div p .units
    font-size .25em

  #settingsButton
    width 40px
    float right
    margin 3px
    cursor pointer
