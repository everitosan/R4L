:host
  display block
  font-family "Hero"

  #userInfo
    display block
    background  #4B96CA
    padding-bottom 1.3em

  .name
    font-weight 100
    text-align center
    margin .5em

  .profilePicContainer
    border-radius  50%
    display block
    overflow hidden
    margin 0 auto
    text-align center
    padding-top 20px
    height 220px
    width 220px

  .profilePic
    border 10px solid #F3F4F5
    border-radius 50%
    height 90%
    width 90%

  .personalData
    display flex

  .personalData div
    flex  1

  .personalData div h3,
  .personalData div p
    text-align center
    text-transform uppercase

  .personalData div h3
    font-family "Hero Light"
    font-weight 100
    text-decoration underline
    margin 0


  .personalData div p
    font-size 2em
    font-weight 100
    margin-top 0
    margin-bottom .3em

   .personalData div p .units
    font-size .25em

  #settingsButton
    position absolute
    right .3em
    margin 3px
